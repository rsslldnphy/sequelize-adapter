{
  "name": "casbin-sequelize-adapter",
  "version": "2.0.0",
  "description": "Sequelize adapter for Casbin",
  "main": "lib/adapter.js",
  "typings": "lib/adapter.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "prepublish": "yarn run lint && yarn run test && yarn build",
    "build": "rimraf lib && tsc",
    "lint": "tslint \"src/**/*.ts\"",
    "fix": "tslint \"src/**/*.ts\" --fix",
    "test": "jest --forceExit"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.7.4",
    "coveralls": "^3.0.2",
    "husky": "^3.0.5",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.5",
    "mysql2": "^1.7.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.11.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "casbin": "^3.0.1",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^5.8.10"
  },
  "files": [
    "lib",
    "examples"
  ],
  "homepage": "https://casbin.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/node-casbin/casbin-sequelize-adapter.git"
  },
  "keywords": [
    "casbin",
    "node-casbin",
    "adapter",
    "sequelize",
    "access-control",
    "authorization",
    "auth",
    "authz",
    "acl",
    "rbac",
    "abac",
    "orm"
  ],
  "author": "Node-Casbin",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bugs": {
    "url": "https://github.com/node-casbin/sequelize-adapter/issues"
  },
  "lint-staged": {
    "*.{ts}": [
      "tslint --fix",
      "git add"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.yarnpkg.com"
  },
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/*.+(ts|tsx)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
